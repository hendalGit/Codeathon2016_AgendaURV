<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="442dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imgcampus"

                android:layout_marginLeft="-16dp"
                android:layout_marginTop="-16dp"
                android:layout_marginRight="-16dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="93dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="asudhasfhaoshfohasoihfoia"
                android:id="@+id/telefono"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="977 62 66 23"
                android:id="@+id/nomcampus"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="www.sadasdasd"
                android:id="@+id/direccionemail"
                android:layout_marginTop="60dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Horari:"
                android:id="@+id/textView2"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="De dilluns a divendres"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal|top"
                android:textStyle="bold" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="de 8 a 21h"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Horari:"
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dissabtes i Festius"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal|top"
                android:textStyle="bold" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tancat"
                android:id="@+id/textView9"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="147dp"
        android:layout_height="36dp"
        android:text="Reservar Aula"
        android:textStyle="italic"
        android:id="@+id/reservaraula"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>