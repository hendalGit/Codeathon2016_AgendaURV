<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qualificacions_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

    </LinearLayout>


    <TextView
        android:id="@+id/qualificacions_row_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dp"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_alignStart="@+id/thumbnail" />

    <TextView
        android:id="@+id/qualificacions_row_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="25dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/qualificacions_row_name" />

    <TextView
        android:layout_width="5dp"
        android:layout_height="43dp"
        android:id="@+id/qualificacions_row_color"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>